---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Porfolio Pablo Coletti" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <main class="
      flex min-w-[280px] min-h-screen justify-center items-center 
      dark:bg-neutral-950 dark:text-white
    ">
      <slot />
    </main>
  </body>
</html>
<style is:global>
.btn-primary {
  @apply text-white p-2 rounded-md text-center
  bg-stone-700
  dark:bg-cyan-700
  min-w-[80px]
}
</style>
